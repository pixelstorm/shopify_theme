  <section class="single-product">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">{{product.title}}</li>
            </ol>
          </nav>
        </div>
      </div>

      <div class="row pb-5">
        <div class="col-md-5">
          <div class="single-product-images">
		  {%for image in product.images%}
			  <div data-thumb="{{image.src | img_url: '1920x'}}">
			      <img class="img-fluid" src="{{image.src | img_url: '1920x'}}">
			    </div>
		    {%endfor%}
          </div>
        </div>

        <div class="col-md-7">
          <div class="single-product-details">
		  <h2>{{product.title}}</h2>
		  <p class="product-price">{{product.price | money}}</p>
            
            <p class="product-description">
	    {{product.description}}
            </p>
            <div class="product-category">
              <span>Size:</span>
              <select class="form-control">
                <option>S</option>
                <option>M</option>
                <option>L</option>
                <option>XL</option>
              </select>
            </div>
            <div class="product-category">
              <span>Color:</span>
              <select class="form-control">
                <option>Red</option>
                <option>Blue</option>
                <option>Green</option>
                <option>Orange</option>
              </select>
            </div>
            <div class="product-quantity">
              <span>Quantity:</span>
              <input min="1" type="number" id="quantity" name="quantity" value="1" />
            </div>
            <div class="product-category">
              <span>Categories:</span>
              <ul>
                <li><a href="#">Products</a></li>
                <li><a href="#">Soap</a></li>
              </ul>
            </div>
            <a href="cart.html" class="btn btn-main">Add To Cart</a>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Details</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Specifications</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <h4>Product Description</h4>
	      <p>{{product.description}}</p>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
              <table class="table">
                <tbody>
                  <tr>
                    <td>Small</td>
                    <td>15 inches</td>
                  </tr>
                  <tr>
                    <td>Medium</td>
                    <td>17 inches</td>
                  </tr>
                  <tr>
                    <td>Large</td>
                    <td>20 inches</td>
                  </tr>
                  <tr>
                    <td>X Large</td>
                    <td>25 inches</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
